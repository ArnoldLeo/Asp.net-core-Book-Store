@model IEnumerable<Books>
@{
    ViewData["Title"] = "ActivityBooks";
    Layout = "~/Views/Shared/_Bootstrap.cshtml";
}

<!doctype html>
<html lang="en">

<head>
    <!-- Required meta tags -->
    <title>Activity Books page</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        .card {
            box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
            margin: auto;
            text-align: center;
            font-family: arial;
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: Arial, Helvetica, sans-serif;
        }


        .price {
            color: grey;
            font-size: 22px;
        }

        .card button {
            border: none;
            outline: 0;
            padding: 12px;
            color: white;
            background-color: #001a33;
            text-align: center;
            cursor: pointer;
            width: 100%;
            font-size: 18px;
        }

            .card button:hover {
                opacity: 0.7;
            }

        .column {
            float: left;
            width: 25%;
            padding: 0 10px;
        }
        img {
            margin: 2px auto;
            height: 200px;
            width: 80%;
        }

        /* Remove extra left and right margins, due to padding */
        .row {
            margin: 0 -5px;
        }

            /* Clear floats after the columns */
            .row:after {
                content: "";
                display: table;
                clear: both;
            }

        #name {
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 1; /* number of lines to show */
            -webkit-box-orient: vertical;
        }
    </style>
</head>

<body>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="column">
                <div class="card">
                    <img src="@Html.DisplayFor(modelItem => item.ImageUrl)" alt="books" width="170px" />
                    <h4 id="name">@Html.DisplayFor(modelItem => item.Name)</h4>
                    <p class="price">₹@Html.DisplayFor(modelItem => item.Price)</p>
                    <p><button><a asp-action="Details" asp-route-id="@item.BookId">Details</a></button></p>
                </div>
            </div>
        }
    </div>
</body>
</html>

