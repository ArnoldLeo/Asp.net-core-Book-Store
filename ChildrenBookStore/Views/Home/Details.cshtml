@model Books
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Bootstrap.cshtml";
}

<head>
    <meta name="viewport" content="width=device-width" />
    <title>Detail Page</title>
    <link rel="stylesheet" asp-href-include="twitter-bootstrap/css/bootstrap.css" />
</head>
<h2 class="alert-success">@ViewBag.Result</h2>
<h1>Details</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ImageUrl)
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.ImageUrl)" alt="book" width="30%" />

        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BookType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Author)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Author)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Price)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Price)
        </dd>
    </dl>
</div>






<div class="row">
    <div class="col-md-4">
        <form asp-action="Details">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="BookId" />
            <div class="form-group">
                <input type="hidden" asp-for="ImageUrl" class="form-control" />
            </div>

            <div class="form-group">

                <input type="hidden" asp-for="Name" class="form-control" />

            </div>
            <div class="form-group">

                <input type="hidden" asp-for="Price" class="form-control" />

            </div>
            <div class="form-group">
                <input type="submit" value="Add to cart" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

